---
import { NAV_LINKS, SITE } from "@/siteConfig.ts";

import { ModeToggle } from "@/components/ModeToggle";
---

<header class="pb-8">
  <div class="flex flex-wrap items-center justify-between">
    <a href="/" class="text-lg font-semibold sm:text-xl">{SITE.title}</a>
    <ModeToggle client:load />
  </div>
  <nav class="py-3">
    <ul class="flex list-none items-center gap-2 p-0 sm:gap-3">
      {
        Object.keys(NAV_LINKS).map((navItemKey) => {
          return (
            <li>
              <a href={NAV_LINKS[navItemKey].path}>
                {NAV_LINKS[navItemKey].label}
              </a>
            </li>
          );
        })
      }
    </ul>
  </nav>
</header>
