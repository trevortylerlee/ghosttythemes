---
import { SOCIAL_LINKS } from "@/siteConfig";

import BaseLayout from "@/layouts/BaseLayout.astro";

import SeoPage from "@/components/SeoPage.astro";
---

<BaseLayout>
  <SeoPage slot="head" title="Contact" />
  <section class="prose dark:prose-invert">
    <h2>Contact</h2>
    <ul class="list-none p-0">
      {
        Object.keys(SOCIAL_LINKS).map((socialLinkKey) => {
          return (
            <li>
              <a href={SOCIAL_LINKS[socialLinkKey].url}>
                {SOCIAL_LINKS[socialLinkKey].label}
              </a>
            </li>
          );
        })
      }
    </ul>
  </section>
</BaseLayout>
